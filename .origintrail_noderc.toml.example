# ============================================
# User Configuration Overrides
# ============================================
# This file contains user-specific overrides for the OriginTrail node configuration
# Copy this file to .origintrail_noderc.toml and customize it for your setup
#
# Configuration priority (highest to lowest):
# 1. Environment variables (OT_MANAGERS__NETWORK__PORT=9001)
# 2. .origintrail_noderc.toml (this file)
# 3. config/{environment}.toml (base configuration)
#
# SECURITY NOTE: Never commit .origintrail_noderc.toml to version control!
# It should be listed in .gitignore

# ============================================
# Network Configuration Overrides
# ============================================
[managers.network]
# Uncomment to override network port
# port = 9001

# Add your custom bootstrap nodes
# bootstrap = [
#     "/ip4/157.230.96.194/tcp/9000/p2p/QmZFcns6eGUosD96beHyevKu1jGJ1bA56Reg2f1J4q59Jt",
#     "/ip4/18.132.135.102/tcp/9000/p2p/QmemqyXyvrTAm7PwrcTcFiEEFx69efdR92GSZ1oQprbdja"
# ]

# ============================================
# Repository Configuration Overrides
# ============================================
[managers.repository]
# REQUIRED FOR PRODUCTION: Set your database credentials
# For better security, use environment variables instead:
#   export OT_MANAGERS__REPOSITORY__PASSWORD="your_secure_password"

# database = "operationaldb"
# host = "localhost"
# port = 3306
# user = "ot_node"
# password = "your_password_here"  # Use env var for production!

# ============================================
# HTTP API Configuration Overrides
# ============================================
[http_api]
# Uncomment to override HTTP API port
# port = 8901

# ============================================
# Blockchain Configuration Overrides
# ============================================
# You can override specific blockchain configurations or add new ones

# Example: Override RPC endpoints for better reliability
# [[managers.blockchain]]
# [managers.blockchain.Hardhat]
# rpc_endpoints = [
#     "https://my-private-rpc.example.com",
#     "http://127.0.0.1:8545"
# ]

# Example: Add a production blockchain configuration
# [[managers.blockchain]]
# [managers.blockchain.OriginTrailParachain]
# chain_id = 2043
# hub_contract_address = "0x0957e25BD33034948abc28204ddA54b6E1142D6F"
#
# rpc_endpoints = [
#     "https://astrosat-parachain-rpc.origin-trail.network",
#     "https://astrosat.origintrail.network/",
#     "https://astrosat-2.origintrail.network/"
# ]
#
# # IMPORTANT: Set these via environment variables for production!
# # DO NOT store private keys in this file for production deployments!
# evm_operational_wallet_public_key = "0xYourPublicKey"
# evm_operational_wallet_private_key = "0xYourPrivateKey"  # Use env var!
# evm_management_wallet_public_key = "0xYourManagementPublicKey"
# evm_management_wallet_private_key = "0xYourManagementPrivateKey"  # Use env var!
#
# initial_stake_amount = 50_000
# initial_ask_amount = 0.2
# operator_fee = 10
#
# shares_token_name = "MyNode"
# shares_token_symbol = "MYN"

# ============================================
# Production Security Best Practices
# ============================================
# 1. Use environment variables for sensitive data:
#    export OT_MANAGERS__REPOSITORY__PASSWORD="db_password"
#    export OT_MANAGERS__BLOCKCHAIN__0__HARDHAT__EVM_OPERATIONAL_WALLET_PRIVATE_KEY="0x..."
#
# 2. Restrict file permissions:
#    chmod 600 .origintrail_noderc.toml
#
# 3. Use hardware wallets or key management systems for production
#
# 4. Keep this file out of version control (check .gitignore)
#
# 5. Regularly rotate credentials and private keys
